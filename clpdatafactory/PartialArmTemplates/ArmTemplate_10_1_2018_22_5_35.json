				},
				"type": "DocumentDbCollection",
				"structure": [
					{
						"name": "$v.id.$v",
						"type": "Int64"
					},
					{
						"name": "$v.userId.$v",
						"type": "Int64"
					},
					{
						"name": "$v.title.$v",
						"type": "String"
					},
					{
						"name": "$v.body.$v",
						"type": "String"
					}
				],
				"typeProperties": {
					"collectionName": "Content"
				}
			}
		},
		{
			"name": "[concat(parameters('factoryName'), '/DestinationDataset_q1g')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "CosmosDb1",
					"type": "LinkedServiceReference"
				},
				"type": "DocumentDbCollection",
				"structure": [
					{
						"name": "$t",
						"type": "Int64"
					},
					{
						"name": "$v._id.$t",
						"type": "Int64"
					},
					{
						"name": "$v._id.$v",
						"type": "String"
					},
					{
						"name": "id",
						"type": "String"
					}
				],
				"typeProperties": {
					"collectionName": "Content"
				}
			}
		},
		{
			"name": "[concat(parameters('factoryName'), '/HttpFile1')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "fetching the data",
				"linkedServiceName": {
					"referenceName": "HttpServer1",
					"type": "LinkedServiceReference"
				},
				"type": "HttpFile",
				"structure": [
					{
						"name": "userId",
						"type": "Int64"
					},
					{
						"name": "id",
						"type": "Int64"
					},
					{
						"name": "title",
						"type": "String"
					},
					{
						"name": "body",
						"type": "String"
					}
				],
				"typeProperties": {
					"format": {
						"type": "JsonFormat",
						"filePattern": "arrayOfObjects",
						"jsonPathDefinition": {
							"userId": "$.['userId']",
							"id": "$.['id']",
							"title": "$.['title']",
							"body": "$.['body']"
						}
					},
					"relativeUrl": "",
					"requestMethod": "Get"
				}
			}
		},
		{
			"name": "[concat(parameters('factoryName'), '/SourceDataset_q1g')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "HttpServer1",
					"type": "LinkedServiceReference"
				},
				"type": "HttpFile",
				"structure": [
