{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory Name",
			"defaultValue": "clpdatafactory"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/CopyPipeline_q1g')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "Copy_q1g",
						"type": "Copy",
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [
							{
								"name": "Destination",
								"value": "Content"
							}
						],
						"typeProperties": {
							"source": {
								"type": "HttpSource",
								"httpRequestTimeout": "00:01:40"
							},
							"sink": {
								"type": "DocumentDbCollectionSink",
								"nestingSeparator": ".",
								"writeBatchSize": 10000,
								"writeBehavior": "insert"
							},
							"enableStaging": false,
							"dataIntegrationUnits": 0,
							"translator": {
								"type": "TabularTranslator",
								"columnMappings": {
									"userId": "$t",
									"title": "$v._id.$t",
									"body": "$v._id.$v",
									"id": "id"
								}
							}
						},
						"inputs": [
							{
								"referenceName": "SourceDataset_q1g",
								"type": "DatasetReference"
							}
						],
						"outputs": [
							{
								"referenceName": "DestinationDataset_q1g",
								"type": "DatasetReference"
							}
						]
					}
				]
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/SourceDataset_q1g')]",
				"[concat(variables('factoryId'), '/datasets/DestinationDataset_q1g')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/pipeLine1')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "Copy Data1",
						"type": "Copy",
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"typeProperties": {
							"source": {
								"type": "HttpSource",
								"httpRequestTimeout": "00:01:40"
							},
							"sink": {
								"type": "DocumentDbCollectionSink",
								"writeBatchTimeout": "10.23:55:55",
								"nestingSeparator": "",
								"writeBatchSize": 10000,
								"writeBehavior": "upsert"
							},
							"enableStaging": false,
							"dataIntegrationUnits": 0,
							"translator": {
								"type": "TabularTranslator",
								"columnMappings": {
									"userId": "$v.id.$v",
									"id": "$v.userId.$v",
									"title": "$v.title.$v",
									"body": "$v.body.$v"
								}
							}
						},
						"inputs": [
							{
								"referenceName": "HttpFile1",
								"type": "DatasetReference"
							}
						],
						"outputs": [
							{
								"referenceName": "CosmoDBDatasets",
								"type": "DatasetReference"
							}
						]
					}
				]
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/HttpFile1')]",
				"[concat(variables('factoryId'), '/datasets/CosmoDBDatasets')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/pipeline2')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "Web1",
						"type": "WebActivity",
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"typeProperties": {
							"url": "https://jsonplaceholder.typicode.com/posts/1",
							"method": "GET",
							"datasets": [
								{
									"referenceName": "CosmoDBDatasets",
									"type": "DatasetReference"
								}
							]
						}
					}
				]
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/CosmoDBDatasets')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/CosmoDB')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "This is the books",
				"linkedServiceName": {
					"referenceName": "CosmosDb1",
					"type": "LinkedServiceReference"
				},
				"type": "DocumentDbCollection",
				"structure": [
					{
						"name": "$v.id.$t",
						"type": "Int64"
					},
					{
						"name": "$v.id.$v",
						"type": "Int64"
					},
					{
						"name": "$v.userId.$t",
						"type": "Int64"
					},
					{
						"name": "$v.userId.$v",
						"type": "Int64"
					},
					{
						"name": "$v.title.$t",
						"type": "Int64"
					},
					{
						"name": "$v.title.$v",
						"type": "String"
					},
					{
						"name": "$v.body.$t",
						"type": "Int64"
					},
					{
						"name": "$v.body.$v",
						"type": "String"
					}
				],
				"typeProperties": {
					"collectionName": "Content"
				}
			}
		},
		{
			"name": "[concat(parameters('factoryName'), '/CosmoDBDatasets')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "This is the books",
